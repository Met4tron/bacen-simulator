{
    "compilerOptions": {
        "target": "es2017",
        "module": "commonjs",
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "baseUrl": ".",
        "paths": {
            "@api/*": ["./apps/api/*"],
            "@package/*": ["./package/*"],
        }
    },
    "include": ["apps/*", "apps/**/*"],
}