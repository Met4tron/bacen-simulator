{
    "compilerOptions": {
        "target": "es2017",
        "module": "commonjs",
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "baseUrl": ".",
        "paths": {
            "@api/*": ["./api/*"],
            "@infra/*": ["./infra/*"],
        }
    },
    "include": ["api/*", "api/**/*"],
}